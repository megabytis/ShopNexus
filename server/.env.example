# Application Configuration
NODE_ENV=production
PORT=8888

# MongoDB Atlas Configuration (Cloud Database)
# Get your connection string from MongoDB Atlas dashboard
MONGO_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/database?appName=AppName

# Redis Cloud Configuration
# Get your Redis credentials from Redis Cloud dashboard
REDIS_HOST=your-redis-host.cloud.redislabs.com
REDIS_PORT=12345
REDIS_USERNAME=default
REDIS_PASSWORD=your-redis-password

# JWT Configuration
# Generate a strong random secret: openssl rand -base64 32
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Frontend URL for CORS
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Cookie Configuration
# Generate a strong random secret: openssl rand -base64 32
COOKIE_SECRET=your-cookie-secret-change-this-in-production

