{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",

    "rootDir": ".",
    "outDir": "dist",

    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "strict": false,
    "skipLibCheck": true,

    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "express"]
  },

  "include": ["app.ts", "src/**/*"],
  "exclude": ["node_modules"]
}
